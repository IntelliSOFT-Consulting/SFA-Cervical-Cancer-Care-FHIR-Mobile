<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/bottom_sheet_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <!-- Drag indicator -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/drag_indicator_bg" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Send Recommendations to Patient"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:text="Choose how you want to send recommendations to the patient"
        android:textAlignment="center"

        android:textSize="14sp" />

    <!-- Communication Options -->
    <CheckBox
        android:id="@+id/whatsappCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WhatsApp" />

    <CheckBox
        android:id="@+id/emailCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email" />

    <CheckBox
        android:id="@+id/smsCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS" />

    <!-- Send Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/primary"
        android:text="Send Recommendations"
        android:textColor="@android:color/white" />
</LinearLayout>